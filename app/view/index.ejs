<!DOCTYPE html>
<html lang="id">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>RandoQuest — Minimalist Challenge Generator</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400&family=Space+Mono:wght@300;400&display=swap"
    rel="stylesheet">

  <style>
    :root {
      --primary: #1A1A1A;
      --gray-dark: #525252;
      --gray: #737373;
      --gray-light: #A3A3A3;
      --gray-lighter: #E5E5E5;
      --white: #FFFFFF;
      --background: #FAFAFA;
    }

    body {
      font-family: 'Inter', sans-serif;
      background-color: var(--background);
      color: var(--primary);
      font-weight: 300;
      line-height: 1.6;
      letter-spacing: -0.01em;
      margin: 0;
      padding: 0;
    }

    /* Typography & Layout */
    .text-header {
      letter-spacing: 0.15em;
      text-transform: uppercase;
      font-weight: 300;
    }

    .border-subtle {
      border: 1px solid var(--gray-lighter);
    }

    .border-b-subtle {
      border-bottom: 1px solid var(--gray-lighter);
    }

    /* Buttons */
    .btn-minimal {
      border: 1px solid var(--primary);
      color: var(--primary);
      background: transparent;
      padding: 0.75rem 1.5rem;
      transition: all 300ms ease;
      text-transform: lowercase;
      font-weight: 400;
      display: inline-block;
    }

    .btn-minimal:hover {
      background: var(--primary);
      color: var(--white);
    }

    .btn-minimal:disabled {
      opacity: 0.3;
      cursor: not-allowed;
    }

    .header-glass {
      background: rgba(255, 255, 255, 0.7);
      backdrop-filter: blur(12px);
      -webkit-backdrop-filter: blur(12px);
      border-bottom: 1px solid var(--gray-lighter);
    }

    /* Animations */
    .fade-in {
      animation: fadeIn 400ms ease-out forwards;
    }

    @keyframes fadeIn {
      from {
        opacity: 0;
        transform: translateY(10px);
      }

      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    /* Custom Elements */
    .question-giant {
      font-size: 8rem;
      font-weight: 300;
      color: var(--gray-lighter);
      user-select: none;
    }

    .challenge-card {
      border-bottom: 1px solid var(--gray-lighter);
      padding: 1.5rem 0;
      transition: opacity 300ms ease;
    }

    .challenge-card .actions {
      opacity: 0;
      transition: opacity 300ms ease;
    }

    .challenge-card:hover .actions {
      opacity: 1;
    }

    .action-text {
      font-size: 0.75rem;
      color: var(--gray-light);
      text-transform: lowercase;
      margin-left: 1rem;
      transition: color 200ms ease;
    }

    .action-text:hover {
      color: var(--primary);
    }

    .custom-scroll::-webkit-scrollbar {
      width: 4px;
    }

    .custom-scroll::-webkit-scrollbar-track {
      background: var(--background);
    }

    .custom-scroll::-webkit-scrollbar-thumb {
      background: var(--gray-lighter);
    }

    /* Modals */
    .modal-blur {
      background: rgba(250, 250, 250, 0.8);
      backdrop-filter: blur(4px);
    }

    .modal-content {
      background: white;
      border: 1px solid var(--gray-lighter);
      padding: 3rem;
    }

    input,
    textarea,
    select {
      border-bottom: 1px solid var(--gray-lighter) !important;
      border-top: 0 !important;
      border-left: 0 !important;
      border-right: 0 !important;
      background: transparent !important;
      padding: 1rem 0 !important;
      font-weight: 300;
      border-radius: 0 !important;
    }

    input:focus,
    textarea:focus,
    select:focus {
      outline: none !important;
      border-bottom: 1px solid var(--primary) !important;
    }
  </style>
</head>

<body class="h-screen overflow-hidden flex flex-col">

  <!-- Header -->
  <header class="header-glass fixed top-0 w-full z-50">
    <div class="max-w-7xl mx-auto px-12 py-6 flex items-center justify-between">
      <h1 class="text-xl font-light tracking-[0.2em] lowercase">randoquest.</h1>
      <button onclick="openSubmit()" class="btn-minimal">
        submit challenge
      </button>
    </div>
  </header>

  <!-- Main Content -->
  <main class="flex-1 grid lg:grid-cols-[60%_40%] h-full pt-20">

    <!-- Left Panel -->
    <div class="flex flex-col items-center justify-center p-16 bg-white overflow-y-auto">
      <div class="w-full max-w-xl text-center space-y-12">

        <div id="displayArea" class="min-h-[300px] flex items-center justify-center">
          <!-- Default State -->
          <div id="qMark" class="question-giant">?</div>

          <!-- Result State -->
          <div id="cResult" class="hidden fade-in space-y-8">
            <span id="cDiff" class="text-[0.7rem] tracking-[0.2em] font-normal uppercase text-gray-400">medium</span>
            <p id="cText" class="text-2xl font-light leading-relaxed text-gray-800"></p>
            <p id="cContrib" class="text-xs text-gray-400 font-light italic"></p>
          </div>
        </div>

        <div class="pt-16">
          <button id="rollBtn" onclick="roll()" class="btn-minimal px-12 py-4 tracking-widest uppercase text-xs">
            roll random
          </button>
        </div>

      </div>
    </div>

    <!-- Right Panel -->
    <div class="h-full border-l border-[#E5E5E5] bg-[#FAFAFA] flex flex-col overflow-hidden">
      <div class="p-12 pb-6">
        <h2 class="text-header text-[0.7rem] text-gray-400 mb-2">CHALLENGES</h2>
        <p class="text-xl font-light">Community pool. <span class="text-gray-300" id="totalCnt">0</span></p>
      </div>

      <div id="cList" class="custom-scroll overflow-y-auto px-12 flex-1 pb-12">
        <!-- Cards injected here -->
      </div>
    </div>
  </main>

  <!-- Generic Modal Structure -->
  <div id="modal" class="hidden fixed inset-0 z-[60] flex items-center justify-center p-8">
    <div class="absolute inset-0 modal-blur" onclick="closeModal()"></div>
    <div class="modal-content w-full max-w-lg relative fade-in">
      <h2 id="modalTitle" class="text-header text-xs text-gray-400 mb-12">NEW CHALLENGE</h2>

      <form id="challengeForm" onsubmit="handleForm(event)" class="space-y-12">
        <input type="hidden" id="fId">

        <div class="space-y-1">
          <label class="text-[0.7rem] uppercase text-gray-400 tracking-wider">Description</label>
          <textarea id="fDesc" class="w-full" placeholder="Type challenge here..." rows="2" required></textarea>
        </div>

        <div class="grid grid-cols-2 gap-12">
          <div class="space-y-1">
            <label class="text-[0.7rem] uppercase text-gray-400 tracking-wider">Difficulty</label>
            <select id="fDiff" class="w-full">
              <option value="Easy">Easy</option>
              <option value="Medium" selected>Medium</option>
              <option value="Hard">Hard</option>
            </select>
          </div>
          <div id="contribField" class="space-y-1">
            <label class="text-[0.7rem] uppercase text-gray-400 tracking-wider">Your Name</label>
            <input type="text" id="fContrib" class="w-full" placeholder="Anonymous">
          </div>
        </div>

        <div class="flex justify-between items-center pt-8">
          <button type="submit" class="btn-minimal">Confirm</button>
          <button type="button" onclick="closeModal()"
            class="text-xs text-gray-400 hover:text-black transition-colors">Cancel</button>
        </div>
      </form>
    </div>
  </div>

  <script>
    let challenges = [];
    let isEdit = false;

    window.onload = () => { sync(); };

    async function sync() {
      try {
        const r = await fetch('/api/challenges');
        challenges = await r.json();
        render();
      } catch (e) { console.error(e); }
    }

    function render() {
      const list = document.getElementById('cList');
      document.getElementById('totalCnt').textContent = challenges.length;
      list.innerHTML = '';

      challenges.forEach(c => {
        const div = document.createElement('div');
        div.className = 'challenge-card flex items-baseline justify-between';
        div.innerHTML = `
                    <div class="flex-1">
                        <p class="text-[0.9rem] text-gray-600 font-light mb-1">${c.description}</p>
                        <p class="text-[0.6rem] uppercase tracking-widest text-gray-300 font-normal">${c.difficulty} — ${c.contributor}</p>
                    </div>
                    <div class="actions flex">
                        <button onclick="openEdit(${c.id})" class="action-text underline-offset-4 hover:underline">edit</button>
                        <button onclick="del(${c.id})" class="action-text underline-offset-4 hover:underline">delete</button>
                    </div>
                `;
        list.appendChild(div);
      });
    }

    function roll() {
      if (challenges.length === 0) return;

      const btn = document.getElementById('rollBtn');
      const q = document.getElementById('qMark');
      const res = document.getElementById('cResult');

      btn.disabled = true;
      btn.textContent = '...';

      // Minimalist transition: clear current, wait, show new
      q.style.opacity = '0';
      res.classList.add('hidden');

      setTimeout(() => {
        const random = challenges[Math.floor(Math.random() * challenges.length)];

        document.getElementById('cText').textContent = random.description;
        document.getElementById('cDiff').textContent = random.difficulty;
        document.getElementById('cContrib').textContent = `by ${random.contributor}`;

        q.classList.add('hidden');
        res.classList.remove('hidden');
        btn.disabled = false;
        btn.textContent = 'roll random';
        q.style.opacity = '1';
      }, 600);
    }

    // Modal Logic
    function openSubmit() {
      isEdit = false;
      document.getElementById('modalTitle').textContent = 'NEW CHALLENGE';
      document.getElementById('contribField').classList.remove('hidden');
      document.getElementById('challengeForm').reset();
      document.getElementById('modal').classList.remove('hidden');
    }

    function openEdit(id) {
      isEdit = true;
      const c = challenges.find(x => x.id == id);
      document.getElementById('modalTitle').textContent = 'EDIT CHALLENGE';
      document.getElementById('contribField').classList.add('hidden');
      document.getElementById('fId').value = c.id;
      document.getElementById('fDesc').value = c.description;
      document.getElementById('fDiff').value = c.difficulty;
      document.getElementById('modal').classList.remove('hidden');
    }

    function closeModal() { document.getElementById('modal').classList.add('hidden'); }

    async function handleForm(e) {
      e.preventDefault();
      const id = document.getElementById('fId').value;
      const data = {
        description: document.getElementById('fDesc').value,
        difficulty: document.getElementById('fDiff').value
      };

      if (isEdit) {
        await fetch(`/api/challenges/${id}`, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });
      } else {
        data.contributor = document.getElementById('fContrib').value || 'Anonymous';
        await fetch('/api/challenges', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });
      }

      closeModal();
      sync();
    }

    async function del(id) {
      if (!confirm('Permanent delete?')) return;
      await fetch(`/api/challenges/${id}`, { method: 'DELETE' });
      sync();
    }

    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape') closeModal();
    });
  </script>
</body>

</html>